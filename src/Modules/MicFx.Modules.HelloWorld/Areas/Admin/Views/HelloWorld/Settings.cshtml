@model MicFx.Modules.HelloWorld.Areas.Admin.Controllers.HelloWorldSettingsViewModel

@{
    ViewData["Title"] = "HelloWorld Settings";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <!-- Header -->
    <div>
        <h2 class="text-2xl font-bold text-gray-900">HelloWorld Settings</h2>
        <p class="text-gray-600 mt-1">Configure HelloWorld module settings</p>
    </div>

    <!-- Settings Form -->
    <div class="bg-white rounded shadow-sm">
        <form method="post" class="p-6 space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

            <!-- Message Settings -->
            <div>
                <h3 class="text-lg font-medium text-gray-900 mb-4">Message Settings</h3>
                <div>
                    <label asp-for="DefaultMessage" class="block text-sm font-medium text-gray-700 mb-2">Default Message</label>
                    <input asp-for="DefaultMessage" class="micfx-input" />
                    <span asp-validation-for="DefaultMessage" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <!-- Display Settings -->
            <div class="pt-6 border-t border-gray-100">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Display Settings</h3>
                <div class="space-y-4">
                    <div class="flex items-center">
                        <input type="checkbox" asp-for="ShowTimestamp" class="rounded border-gray-300 text-micfx-600 focus:ring-micfx-500">
                        <label asp-for="ShowTimestamp" class="ml-2 text-sm text-gray-700">Show timestamp</label>
                    </div>
                    <div class="flex items-center">
                        <input type="checkbox" asp-for="ShowUserInfo" class="rounded border-gray-300 text-micfx-600 focus:ring-micfx-500">
                        <label asp-for="ShowUserInfo" class="ml-2 text-sm text-gray-700">Show user information</label>
                    </div>
                </div>
            </div>

            <!-- API Settings -->
            <div class="pt-6 border-t border-gray-100">
                <h3 class="text-lg font-medium text-gray-900 mb-4">API Settings</h3>
                <div class="space-y-4">
                    <div class="flex items-center">
                        <input type="checkbox" asp-for="EnableApi" class="rounded border-gray-300 text-micfx-600 focus:ring-micfx-500">
                        <label asp-for="EnableApi" class="ml-2 text-sm text-gray-700">Enable API endpoints</label>
                    </div>
                    <div class="flex items-center">
                        <input type="checkbox" asp-for="RequireAuthentication" class="rounded border-gray-300 text-micfx-600 focus:ring-micfx-500">
                        <label asp-for="RequireAuthentication" class="ml-2 text-sm text-gray-700">Require authentication for API</label>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="flex justify-end space-x-4 pt-6 border-t border-gray-100">
                <a href="/admin/helloworld" class="micfx-button-secondary">Cancel</a>
                <button type="submit" class="micfx-button-primary">Save Settings</button>
            </div>
        </form>
    </div>
</div> 