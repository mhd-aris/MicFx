@{
    ViewData["Title"] = "HelloWorld Admin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <!-- Header -->
    <div>
        <h2 class="text-2xl font-bold text-gray-900">HelloWorld Module</h2>
        <p class="text-gray-600 mt-1">Manage HelloWorld module settings and content</p>
    </div>

    <!-- Module Info -->
    <div class="bg-white rounded shadow-sm">
        <div class="p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Module Information</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <div class="text-sm font-medium text-gray-500">Module Name</div>
                    <div class="text-gray-900">HelloWorld</div>
                </div>
                <div>
                    <div class="text-sm font-medium text-gray-500">Version</div>
                    <div class="text-gray-900">1.0.0</div>
                </div>
                <div>
                    <div class="text-sm font-medium text-gray-500">Status</div>
                    <div class="text-green-600">Active</div>
                </div>
                <div>
                    <div class="text-sm font-medium text-gray-500">Description</div>
                    <div class="text-gray-900">Demo module for MicFx framework</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded shadow-sm">
        <div class="p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Quick Actions</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <a href="/admin/helloworld/settings" class="p-4 rounded hover:bg-gray-50">
                    <div class="font-medium">Module Settings</div>
                    <div class="text-sm text-gray-600">Configure HelloWorld module</div>
                </a>
                <a href="/helloworld" class="p-4 rounded hover:bg-gray-50">
                    <div class="font-medium">View Module</div>
                    <div class="text-sm text-gray-600">Go to HelloWorld page</div>
                </a>
            </div>
        </div>
    </div>

    <!-- API Endpoints -->
    <div class="bg-white rounded shadow-sm">
        <div class="p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">API Endpoints</h3>
            <div class="space-y-2">
                <div class="flex justify-between items-center p-3 bg-gray-50 rounded">
                    <div>
                        <div class="font-medium">GET /api/helloworld</div>
                        <div class="text-sm text-gray-600">Get HelloWorld message</div>
                    </div>
                    <a href="/api/helloworld" target="_blank" class="text-blue-600 hover:text-blue-800">Test</a>
                </div>
                <div class="flex justify-between items-center p-3 bg-gray-50 rounded">
                    <div>
                        <div class="font-medium">GET /api/helloworld/demo</div>
                        <div class="text-sm text-gray-600">Demo endpoint</div>
                    </div>
                    <a href="/api/helloworld/demo" target="_blank" class="text-blue-600 hover:text-blue-800">Test</a>
                </div>
            </div>
        </div>
    </div>
</div> 