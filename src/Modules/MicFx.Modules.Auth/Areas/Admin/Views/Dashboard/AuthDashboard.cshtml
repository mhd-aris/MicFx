@using System.Security.Claims
@model MicFx.Modules.Auth.Domain.DTOs.AdminDashboardViewModel

@{
    ViewData["Title"] = "Auth Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <!-- Header -->
    <div>
        <h2 class="text-2xl font-bold text-gray-900">Auth Dashboard</h2>
        <p class="text-gray-600 mt-1">Overview of authentication and authorization system</p>
    </div>

    <!-- Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="bg-white p-4 rounded shadow-sm">
            <div class="text-sm text-gray-600">Total Users</div>
            <div class="text-2xl font-bold">@Model.TotalUsers</div>
        </div>
        <div class="bg-white p-4 rounded shadow-sm">
            <div class="text-sm text-gray-600">Active Users</div>
            <div class="text-2xl font-bold">@Model.ActiveUsers</div>
        </div>
        <div class="bg-white p-4 rounded shadow-sm">
            <div class="text-sm text-gray-600">Total Roles</div>
            <div class="text-2xl font-bold">@Model.TotalRoles</div>
        </div>
        <div class="bg-white p-4 rounded shadow-sm">
            <div class="text-sm text-gray-600">Total Permissions</div>
            <div class="text-2xl font-bold">@Model.TotalPermissions</div>
        </div>
    </div>

    <!-- Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent Users -->
        <div class="bg-white rounded shadow-sm">
            <div class="p-4 border-b border-gray-100">
                <h3 class="font-semibold">Recent Users</h3>
            </div>
            <div class="p-4">
                @if (Model.RecentUsers.Any())
                {
                    <div class="space-y-3">
                        @foreach (var user in Model.RecentUsers)
                        {
                            <div class="flex justify-between items-center">
                                <div>
                                    <div class="font-medium">@user.FullName</div>
                                    <div class="text-sm text-gray-600">@user.Email</div>
                                </div>
                                <span class="text-sm @(user.IsActive ? "text-green-600" : "text-red-600")">
                                    @(user.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-gray-500">No users found</p>
                }
            </div>
        </div>

        <!-- Top Roles -->
        <div class="bg-white rounded shadow-sm">
            <div class="p-4 border-b border-gray-100">
                <h3 class="font-semibold">Top Roles</h3>
            </div>
            <div class="p-4">
                @if (Model.TopRoles.Any())
                {
                    <div class="space-y-3">
                        @foreach (var role in Model.TopRoles)
                        {
                            <div class="flex justify-between items-center">
                                <div>
                                    <div class="font-medium">@role.Name</div>
                                    @if (!string.IsNullOrEmpty(role.Description))
                                    {
                                        <div class="text-sm text-gray-600">@role.Description</div>
                                    }
                                </div>
                                <span class="text-sm text-blue-600">@role.UserCount users</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-gray-500">No roles found</p>
                }
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded shadow-sm">
        <div class="p-4 border-b border-gray-100">
            <h3 class="font-semibold">Quick Actions</h3>
        </div>
        <div class="p-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <a href="/admin/auth/users/create" class="p-4 rounded hover:bg-gray-50">
                    <div class="font-medium">Add User</div>
                    <div class="text-sm text-gray-600">Create a new user account</div>
                </a>
                <a href="/admin/auth/roles/create" class="p-4 rounded hover:bg-gray-50">
                    <div class="font-medium">Add Role</div>
                    <div class="text-sm text-gray-600">Create a new role</div>
                </a>
                <a href="/admin/auth/permissions" class="p-4 rounded hover:bg-gray-50">
                    <div class="font-medium">Manage Permissions</div>
                    <div class="text-sm text-gray-600">View and edit permissions</div>
                </a>
            </div>
        </div>
    </div>

    <!-- TagHelper Demo Section -->
    <div class="bg-white rounded shadow-sm">
        <div class="p-4 border-b border-gray-100">
            <h3 class="font-semibold">TagHelper Demo - Permission & Role Based Visibility</h3>
            <p class="text-sm text-gray-600 mt-1">This section demonstrates how TagHelpers control content visibility based on permissions and roles</p>
        </div>
        <div class="p-4 space-y-6">
            
            <!-- Single Permission Demo -->
            <div class="border rounded p-4">
                <h4 class="font-medium text-gray-900 mb-3">Single Permission Demo</h4>
                
                <!-- Visible if user has users.edit permission -->
                <div requires-permission="users.edit" class="mb-3 p-3 bg-green-50 border border-green-200 rounded">
                    <div class="font-medium text-green-800">‚úÖ This content is visible because you have 'users.edit' permission</div>
                    <div class="text-sm text-green-600">This section shows sensitive user management features</div>
                </div>

                <!-- Hidden if user has users.edit permission (inverse logic) -->
                <div requires-permission="users.edit" hide-if-no-permission="false" class="mb-3 p-3 bg-red-50 border border-red-200 rounded">
                    <div class="font-medium text-red-800">‚ùå This content is visible because you DON'T have 'users.edit' permission</div>
                    <div class="text-sm text-red-600">This section shows when user lacks specific permission</div>
                </div>

                <!-- Always visible (no permission check) -->
                <div class="mb-3 p-3 bg-blue-50 border border-blue-200 rounded">
                    <div class="font-medium text-blue-800">‚ÑπÔ∏è This content is always visible (no permission check)</div>
                    <div class="text-sm text-blue-600">Public information that everyone can see</div>
                </div>
            </div>

            <!-- Multiple Permissions Demo -->
            <div class="border rounded p-4">
                <h4 class="font-medium text-gray-900 mb-3">Multiple Permissions Demo (ANY logic)</h4>
                
                <!-- Visible if user has ANY of the specified permissions -->
                <div requires-any-permission="users.edit,users.view,roles.manage" class="mb-3 p-3 bg-purple-50 border border-purple-200 rounded">
                    <div class="font-medium text-purple-800">üéØ This content is visible because you have at least one of: 'users.edit', 'users.view', or 'roles.manage'</div>
                    <div class="text-sm text-purple-600">Flexible permission checking with multiple options</div>
                </div>

                <!-- Hidden if user has ANY of the specified permissions -->
                <div requires-any-permission="users.edit,users.view,roles.manage" hide-if-no-permission="false" class="mb-3 p-3 bg-orange-50 border border-orange-200 rounded">
                    <div class="font-medium text-orange-800">‚ö†Ô∏è This content is visible because you DON'T have any of: 'users.edit', 'users.view', or 'roles.manage'</div>
                    <div class="text-sm text-orange-600">Shows when user lacks all specified permissions</div>
                </div>
            </div>

            <!-- Role Based Demo -->
            <div class="border rounded p-4">
                <h4 class="font-medium text-gray-900 mb-3">Role Based Demo</h4>
                
                <!-- Visible if user has Admin role -->
                <div requires-role="Admin" class="mb-3 p-3 bg-indigo-50 border border-indigo-200 rounded">
                    <div class="font-medium text-indigo-800">üëë This content is visible because you have 'Admin' role</div>
                    <div class="text-sm text-indigo-600">Administrative features and settings</div>
                </div>

                <!-- Visible if user has SuperAdmin role -->
                <div requires-role="SuperAdmin" class="mb-3 p-3 bg-yellow-50 border border-yellow-200 rounded">
                    <div class="font-medium text-yellow-800">üåü This content is visible because you have 'SuperAdmin' role</div>
                    <div class="text-sm text-yellow-600">Super administrative features and system settings</div>
                </div>

                <!-- Visible if user has UserManager role -->
                <div requires-role="UserManager" class="mb-3 p-3 bg-teal-50 border border-teal-200 rounded">
                    <div class="font-medium text-teal-800">üë• This content is visible because you have 'UserManager' role</div>
                    <div class="text-sm text-teal-600">User management features and reports</div>
                </div>
            </div>

            <!-- Code Examples -->
            <div class="border rounded p-4">
                <h4 class="font-medium text-gray-900 mb-3">Code Examples</h4>
                <div class="bg-gray-50 p-3 rounded text-sm font-mono space-y-2">
                    <div class="text-gray-700">
                        <span class="text-green-600">// Single permission check</span><br>
                        &lt;div requires-permission="users.edit"&gt;Content&lt;/div&gt;
                    </div>
                    <div class="text-gray-700">
                        <span class="text-green-600">// Inverse logic (show if NO permission)</span><br>
                        &lt;div requires-permission="users.edit" hide-if-no-permission="false"&gt;Content&lt;/div&gt;
                    </div>
                    <div class="text-gray-700">
                        <span class="text-green-600">// Multiple permissions (ANY logic)</span><br>
                        &lt;div requires-any-permission="users.edit,users.view"&gt;Content&lt;/div&gt;
                    </div>
                    <div class="text-gray-700">
                        <span class="text-green-600">// Role based check</span><br>
                        &lt;div requires-role="Admin"&gt;Content&lt;/div&gt;
                    </div>
                </div>
            </div>

            <!-- Current User Info -->
            <div class="border rounded p-4">
                <h4 class="font-medium text-gray-900 mb-3">Current User Information</h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                    <div>
                        <div class="font-medium text-gray-700">User ID:</div>
                        <div class="text-gray-600">@User.FindFirst(ClaimTypes.NameIdentifier)?.Value</div>
                    </div>
                    <div>
                        <div class="font-medium text-gray-700">Email:</div>
                        <div class="text-gray-600">@User.FindFirst(ClaimTypes.Email)?.Value</div>
                    </div>
                    <div>
                        <div class="font-medium text-gray-700">Roles:</div>
                        <div class="text-gray-600">@string.Join(", ", User.Claims.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value))</div>
                    </div>
                    <div>
                        <div class="font-medium text-gray-700">Permissions:</div>
                        <div class="text-gray-600">@string.Join(", ", User.Claims.Where(c => c.Type == "permission").Select(c => c.Value))</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 