{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "MicFx": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=micfx_staging;User Id=sa;Password=Strong!123;Encrypt=False;TrustServerCertificate=True;MultipleActiveResultSets=True;",
    "Redis": "localhost:6379",
    "Elasticsearch": "http://localhost:9200"
  },

  "MicFx": {
    "Framework": {
      "Name": "MicFx Framework",
      "Version": "1.0.0",
      "Environment": "Staging"
    },
    
    "Performance": {
      "EnableResponseCaching": true,
      "DefaultCacheDurationMinutes": 45,
      "EnableResponseCompression": true,
      "MaxRequestBodySize": 100663296
    },

    "Security": {
      "EnableHttpsRedirection": true,
      "EnableStrictTransportSecurity": false,
      "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:;",
      "EnableAntiforgeryTokens": true
    },

    "HealthChecks": {
      "Enabled": true,
      "Endpoint": "/health",
      "DetailedEndpoint": "/health/detailed",
      "TimeoutSeconds": 20
    },

    "Modules": {
      "HelloWorld": {
        "DefaultGreeting": "Welcome to MicFx Staging!",
        "MaxGreetings": 50,
        "EnableLogging": true,
        "TimeoutMs": 8000,
        "AllowedLanguages": ["en", "id", "es"],
        "Cache": {
          "Enabled": true,
          "DurationMinutes": 45,
          "KeyPrefix": "HelloWorld_staging"
        },
        "ExternalService": {
          "BaseUrl": "https://staging-api.example.com",
          "Enabled": true,
          "RetryCount": 3,
          "TimeoutMs": 4000
        }
      }
    },

    "Auth": {
      "RoutePrefix": "auth",
      "Password": {
        "RequiredLength": 8,
        "RequireDigit": true,
        "RequireUppercase": true,
        "RequireLowercase": true,
        "RequireNonAlphanumeric": false
      },
      "Lockout": {
        "MaxFailedAccessAttempts": 4,
        "DefaultLockoutTimeSpanMinutes": 20,
        "AllowedForNewUsers": true
      },
      "Cookie": {
        "LoginPath": "/auth/login",
        "LogoutPath": "/auth/logout", 
        "AccessDeniedPath": "/auth/access-denied",
        "ExpireTimeSpanHours": 6,
        "SlidingExpiration": true,
        "CookieName": "MicFx.Auth.Staging",
        "SecurePolicy": "Always",
        "SameSite": "Lax"
      },
      "DefaultRoles": ["SuperAdmin", "Admin", "User"],
      "AdminRoles": ["SuperAdmin", "Admin"],
      "UserManagementRoles": ["SuperAdmin", "Admin"],
      "RoleHierarchy": {
        "Guest": 0,
        "User": 10,
        "Admin": 50,
        "SuperAdmin": 100
      },
      "DefaultAdmin": {
        "Email": "admin@staging.micfx.dev",
        "Password": "StagingAdmin123!",
        "FirstName": "Staging",
        "LastName": "Admin",
        "Department": "QA",
        "JobTitle": "Staging Administrator"
      }
    }
  },

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Process",
      "Serilog.Enrichers.Thread"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "MicFx": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <m:{Module}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/micfx-staging-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "fileSizeLimitBytes": 838860800,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/micfx-staging-errors-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 268435456,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Error"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithProcessId",
      "WithProcessName",
      "WithThreadId"
    ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "@mt like '%/_health%' or @mt like '%/ping%' or @mt like '%/favicon.ico%'"
        }
      }
    ],
    "Properties": {
      "Application": "MicFx Framework",
      "Environment": "Staging"
    }
  }
} 