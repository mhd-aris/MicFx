{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=micfx_dev;User Id=sa;Password=Strong!123;Encrypt=False;TrustServerCertificate=True;MultipleActiveResultSets=True;",
    "Redis": "localhost:6379",
    "Elasticsearch": "http://localhost:9200"
  },

  "MicFx": {
    "Framework": {
      "Name": "MicFx Framework",
      "Version": "1.0.0",
      "Environment": "Development"
    },
    
    "Performance": {
      "EnableResponseCaching": true,
      "DefaultCacheDurationMinutes": 30,
      "EnableResponseCompression": true,
      "MaxRequestBodySize": 134217728
    },

    "Security": {
      "EnableHttpsRedirection": false,
      "EnableStrictTransportSecurity": false,
      "ContentSecurityPolicy": "default-src 'self'",
      "EnableAntiforgeryTokens": true
    },

    "HealthChecks": {
      "Enabled": true,
      "Endpoint": "/health",
      "DetailedEndpoint": "/health/detailed",
      "TimeoutSeconds": 30
    },

    "Modules": {
      "HelloWorld": {
        "DefaultGreeting": "Halo dari MicFx Framework!",
        "MaxGreetings": 25,
        "EnableLogging": true,
        "TimeoutMs": 10000,
        "AllowedLanguages": ["en", "id", "es", "fr"],
        "Cache": {
          "Enabled": true,
          "DurationMinutes": 30,
          "KeyPrefix": "HelloWorld_v2"
        },
        "ExternalService": {
          "BaseUrl": "https://api.example.com",
          "Enabled": false,
          "RetryCount": 3,
          "TimeoutMs": 5000
        }
      }
    },

    "Auth": {
      "RoutePrefix": "auth",
      "Password": {
        "RequiredLength": 8,
        "RequireDigit": true,
        "RequireUppercase": true,
        "RequireLowercase": true
      },
      "Lockout": {
        "MaxFailedAccessAttempts": 5,
        "DefaultLockoutTimeSpanMinutes": 15,
        "AllowedForNewUsers": true
      },
      "Cookie": {
        "LoginPath": "/auth/login",
        "LogoutPath": "/auth/logout", 
        "AccessDeniedPath": "/auth/access-denied",
        "ExpireTimeSpanHours": 8,
        "SlidingExpiration": true,
        "CookieName": "MicFx.Auth",
        "SecurePolicy": "SameAsRequest",
        "SameSite": "Lax"
      },
      "DefaultRoles": ["SuperAdmin", "Admin", "User"],
      "AdminRoles": ["SuperAdmin", "Admin"],
      "UserManagementRoles": ["SuperAdmin", "Admin"],
      "RoleHierarchy": {
        "Guest": 0,
        "User": 10,
        "Admin": 50,
        "SuperAdmin": 100
      },
      "DefaultAdmin": {
        "Email": "admin@micfx.dev",
        "Password": "Admin123!",
        "FirstName": "System",
        "LastName": "Admin",
        "Department": "IT",
        "JobTitle": "System Administrator"
      }
    }
  },

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Process",
      "Serilog.Enrichers.Thread"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning",
        "MicFx": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <m:{Module}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/micfx-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 536870912,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithProcessId",
      "WithProcessName",
      "WithThreadId"
    ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "@mt like '%/_health%' or @mt like '%/favicon.ico%'"
        }
      }
    ],
    "Properties": {
      "Application": "MicFx Framework",
      "Environment": "Development"
    }
  }
}
