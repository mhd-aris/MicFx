@using MicFx.SharedKernel.Interfaces
@using MicFx.Web.Admin.Services
@inject AdminNavDiscoveryService NavDiscoveryService

@{
    var navItems = await NavDiscoveryService.GetNavigationItemsAsync();
    var groupedItems = navItems.GroupBy(x => x.Category).OrderBy(g => g.Key);
}

@if (navItems.Any())
{
    @foreach (var group in groupedItems)
    {
        <div class="mb-8">
            <!-- Section Title -->
            <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4 px-2">
                @group.Key
            </h3>
            
            <!-- Divider -->
            <div class="w-full h-px bg-gray-200 mb-4"></div>

            <!-- Items -->
            <ul class="space-y-1">
                @foreach (var item in group.OrderBy(i => i.Order).ThenBy(i => i.Title))
                {
                    <li>
                        <a href="@item.Url"
                           class="flex items-center px-4 py-3 rounded-lg text-gray-700 hover:bg-blue-50 hover:text-blue-700 transition-all duration-200 group">
                            @if (!string.IsNullOrEmpty(item.Icon))
                            {
                                <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center mr-4 group-hover:bg-blue-100 transition-colors">
                                    <span class="w-5 h-5 text-gray-600 group-hover:text-blue-600">
                                        @Html.Raw(GetIconSvg(item.Icon))
                                    </span>
                                </div>
                            }
                            else
                            {
                                <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center mr-4 group-hover:bg-blue-100 transition-colors">
                                    <span class="w-5 h-5 text-gray-600 group-hover:text-blue-600">
                                        @Html.Raw(GetIconSvg("default"))
                                    </span>
                                </div>
                            }
                            <div class="flex-1 min-w-0">
                                <span class="font-medium truncate block">@item.Title</span>
                                <span class="text-xs text-gray-500 mt-0.5 capitalize">@group.Key Module</span>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </div>
    }
}

