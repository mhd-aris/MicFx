{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=micfx;User Id=sa;Password=Strong!123;Encrypt=False;TrustServerCertificate=True;"
  },
  "MicFx": {
    "ConfigurationManagement": {
      "AutoRegisterConfigurations": true,
      "EnableConfigurationMonitoring": true,
      "EnableChangeNotifications": true,
      "MonitoringIntervalMs": 30000,
      "ValidateOnStartup": true,
      "ThrowOnValidationFailure": true
    },
    "Modules": {
      "HelloWorld": {
        "DefaultGreeting": "Halo dari MicFx Framework!",
        "MaxGreetings": 25,
        "EnableLogging": true,
        "ApiKey": "helloworld-secret-key-12345",
        "TimeoutMs": 10000,
        "AllowedLanguages": ["en", "id", "es", "fr"],
        "Cache": {
          "Enabled": true,
          "DurationMinutes": 30,
          "KeyPrefix": "HelloWorld_v2"
        },
        "ExternalService": {
          "BaseUrl": "https://api.example.com",
          "Enabled": false,
          "RetryCount": 3
        }
      }
    },
    "Auth": {
      "RoutePrefix": "auth",
      "Password": {
        "RequiredLength": 6,
        "RequireDigit": true,
        "RequireUppercase": true,
        "RequireLowercase": true,
        "RequireNonAlphanumeric": false
      },
      "Lockout": {
        "MaxFailedAccessAttempts": 5,
        "DefaultLockoutTimeSpanMinutes": 5
      },
      "Cookie": {
        "LoginPath": "/auth/login",
        "LogoutPath": "/auth/logout", 
        "AccessDeniedPath": "/auth/access-denied",
        "ExpireTimeSpanHours": 2,
        "CookieName": "MicFx.Auth"
      },
      "DefaultRoles": ["SuperAdmin", "Admin", "User"],
      "DefaultAdmin": {
        "Email": "admin@micfx.dev",
        "Password": "Admin123!",
        "FirstName": "System",
        "LastName": "Admin"
      }
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Process",
      "Serilog.Enrichers.Thread"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/micfx-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 31,
          "fileSizeLimitBytes": 1073741824,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithProcessId",
      "WithProcessName",
      "WithThreadId"
    ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "@mt like '%/_health%'"
        }
      }
    ],
    "Properties": {
      "Application": "MicFx Framework",
      "Environment": "Development"
    }
  }
}
